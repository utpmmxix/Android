<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Views.Interfaces.LoginActivity"
    android:background="@drawable/p1_fondo"
    >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="100dp"
            >
            <LinearLayout android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_afterclass_v2"
                    />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:drawablePadding="5dp"
                android:hint="Usuario"
                android:drawableLeft="@drawable/img_user"
                android:paddingLeft="10dp"
                android:textColor="#2C0404"
                android:textColorHint="#FDFDFD"
                android:background="@drawable/bg_rounded_input_field"

                />

        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            >
            <EditText
                android:id="@+id/txtUserPassword"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:drawablePadding="5dp"

                android:hint="Contrase単a"
                android:drawableLeft="@drawable/img_lock"
                android:inputType="textPassword"

                android:paddingLeft="10dp"
                android:textColor="#2C0404"
                android:textColorHint="#FDFDFD"
                android:background="@drawable/bg_rounded_input_field"

                />

        </TableRow >

        <TableRow
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            >
            <Button
                android:id="@+id/btnRecuperar"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="多Olvidaste tu contrase単a?"
                android:textColor="@android:color/background_light"
                android:layout_gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cb6060"
                android:text="ACCEDER"
                android:textColor="@android:color/background_light"

                />
        </TableRow>

        <TableRow>
            <ProgressBar
                android:id="@+id/progress_login"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多No tienes una cuenta? "
                    android:textColor="#FFFFFF"
                    />
                    <TextView
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                        android:textStyle="bold"
                    android:textColor="#78BAEB"
                    />

            </LinearLayout>



        </TableRow>

    </TableLayout>




</FrameLayout>