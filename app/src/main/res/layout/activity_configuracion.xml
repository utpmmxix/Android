<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Interfaces.activity_configuracion">


    <Button
        android:id="@+id/btnCambiarClave"
        android:textAllCaps="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Cambiar Clave"
        android:drawableLeft="@drawable/img_llave_v3"
        android:background="@android:color/transparent"
        android:textColor="#929191"
        android:drawablePadding="10dp"
        android:paddingLeft="15dp"
        android:textAlignment="textStart"
        android:drawableTint="#929191"

        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#CCC7C7"
        android:orientation="horizontal"
        />

</LinearLayout>